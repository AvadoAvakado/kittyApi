<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="applicationinterface.controllers.AppErrorPopupController"
            prefHeight="150.0" prefWidth="300.0"
            minHeight="150.0" minWidth="300.0"
            maxHeight="150.0" maxWidth="300.0">
    <top>
        <Label fx:id="errorMessage" BorderPane.alignment="CENTER" textAlignment="CENTER" maxWidth="270"
               minHeight="70"
            wrapText="true">
            <BorderPane.margin>
                <Insets top="10"/>
            </BorderPane.margin>
        </Label>
    </top>
    <bottom>
        <HBox spacing="40" alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10" left="50" right="50"/>
            </BorderPane.margin>
            <Button fx:id="saveLogsButton" text="Save Logs" HBox.hgrow="ALWAYS"/>
            <Button fx:id="cancelButton" text="Cancel" HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>
</BorderPane>
